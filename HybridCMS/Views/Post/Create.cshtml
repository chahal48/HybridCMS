@model HybridCMS.Models.PostViewModel
@{
    ViewBag.Title = "Create Post";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
<!-- Create Post Start -->
<div class="container-xxl py-6" style="padding-bottom:0 !important;">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5" style="max-width: 500px;">
        </div>
        <div class="row g-6 justify-content-center">
            <div class="col-lg-12 col-md-12">
                <form id="createPost" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.AssetId)
                    @Html.HiddenFor(model => model.AssetUrl)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="col-md-12 mb-2">
                                @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control", placeholder = "Post Title" } })
                                @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12 mb-2">
                                <textarea class="form-control" placeholder="Description (Maximum 500 characters)." id="Description" name="Description" maxlength="500" style="height: 100px; max-height: 280px;"></textarea>
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 mb-3">
                            <div class="col-md-12 mb-3">
                                <img src="~/Upload/NoImage.png" id="imagePreview" alt="" class="img-thumbnail" style="width: 300px; height: 250px;">
                            </div>
                            <div class="col-md-12 mb-3">
                                <input type="file" id="Image" name="Image" onchange="return fileValidation()" />
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <button type="reset" onclick="fnRedirect('@Model.AssetUrl')" class="btn btn-outline-secondary border-2 py-2 px-4 rounded-pill fw-bold">Cancel</button> &nbsp;
                                <button type="submit" class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill fw-bold">Create</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Create Post End -->
@section scripts{
    <script src="~/Scripts/fnRedirectWithParameterURL.js"></script>
    <script src="~/Scripts/fileValidationScript.js"></script>
    <script src="~/Scripts/CreatePostScript.js"></script>
}

