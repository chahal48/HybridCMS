@model HybridCMS.Models.EditPostViewModal
@{
    ViewBag.Title = "Update Post";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<!-- Update Post Start -->
<div class="container-xxl py-6" style="padding-bottom:0 !important;">
    <div class="container">
        <div class="section-header text-center mx-auto mb-3" style="max-width: 500px;">
            <h3 class="display-5 mb-3">Update Post</h3>
        </div>
        <div class="row g-5 justify-content-center">
            <div class="col-lg-7 col-md-12">
                @using (Html.BeginForm("EditPost", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.PostId)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-floating mb-2">
                        @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                        @Html.LabelFor(model => model.Heading)
                        @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating mb-2">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "URL" } })
                        @Html.LabelFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating mb-3">
                        @Html.TextAreaFor(model => model.EncodedHtml, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Description" } })
                    </div>
                    <div class="form-check float-end">
                        @Html.ActionLink("Cancel", "AdminDashboard", "CMS", new { }, new { @class = "btn btn-outline-secondary border-2 py-2 px-4 rounded-pill fw-bold " }) &nbsp;
                        <button type="submit" class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill fw-bold">Update</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Update Post End -->

