@model HybridCMS.Models.AddPostViewModal

@using (Html.BeginForm("AddPage", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-floating col-md-6 mb-2">
            @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control", placeholder = "Heading" } })
            @Html.LabelFor(model => model.Heading)
            @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
        </div>
        <div class="form-floating col-md-6 mb-2">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "URL", onkeypress = "return AvoidSpace()" } })
            @Html.LabelFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
        <div class="form-floating mb-2">
            @Html.EditorFor(model => model.EncodedHtml, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Description" } })
            @Html.LabelFor(model => model.EncodedHtml)
            @Html.ValidationMessageFor(model => model.EncodedHtml, "", new { @class = "text-danger" })
        </div>
    <div class="form-floating mb-3">
        @if (@ViewBag.AlertMsg != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.AlertMsg
            </div>
        }
    </div>
    <div class="modal-footer">
        @*<button type="button" class="btn btn-secondary">Cancel</button>*@
        <button type="submit" class="btn btn-primary" style="border-radius:50%">
            <i class="fa fa-plus" aria-hidden="true"></i>
        </button>
    </div>
}