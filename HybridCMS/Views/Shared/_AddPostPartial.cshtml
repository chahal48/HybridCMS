@model HybridCMS.Models.AddPostViewModal

<!-- Modal -->
<div class="modal fade" id="addPostModal" tabindex="-1" aria-labelledby="addPostModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPostModalLabel">Add Post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("addPost", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.AssetId)
                    <div class="form-floating mb-2">
                        @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                        @Html.LabelFor(model => model.Heading)
                        @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating mb-2">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "URL" } })
                        @Html.LabelFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating mb-3">
                        @Html.TextAreaFor(model => model.EncodedHtml, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Description" } })
                        @Html.ValidationMessageFor(model => model.EncodedHtml, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary border-2 py-2 px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill">Add</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .jqte_editor {
        height: 100px;
        max-height: 180px;
    }
</style>
