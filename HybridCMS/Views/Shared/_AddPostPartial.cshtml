@model HybridCMS.Models.AddPostViewModal

@using (Html.BeginForm("AddPost", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AssetId)
    <div class="form-floating mb-2">
        @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control", placeholder = "Heading", onkeypress = "return AvoidSpace()" } })
        @Html.LabelFor(model => model.Heading)
        @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
    </div>
    <div class="form-floating mb-2">
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "URL", onkeypress = "return AvoidSpace()" } })
        @Html.LabelFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-floating mb-2">
        @Html.TextAreaFor(model => model.EncodedHtml)
        @Html.ValidationMessageFor(model => model.EncodedHtml, "", new { @class = "text-danger" })
    </div>
    <div class="form-floating mb-3">
        @if (@ViewBag.AlertMsg != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.AlertMsg
            </div>
        }
    </div>
    <div class="modal-footer">
        @*<button type="button" class="btn btn-secondary">Cancel</button>*@
        <button type="submit" class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill">
            <i class="fa fa-plus" aria-hidden="true"></i> Add Post
        </button>
    </div>

}
