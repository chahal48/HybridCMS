@model HybridCMSEntities.AssetEntity

@if (!string.IsNullOrEmpty(Model.AssetPhoto))
{
    <!-- Page Header Start -->
    <div class="container-fluid for-page-header wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center">
            <h1 class="display-5 mb-3 animated slideInDown">@Model.AssetName</h1>
            <div class="row col-lg-12 col-md-12">
                <small class="me-3">
                    <i class="fa fa-user text-primary me-2"></i>@Model.AuthorName &nbsp; <i class="fa fa-calendar text-primary me-2"></i>@Model.CreatedOn.ToString("ddd, dd MMM yyy")
                </small>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <div class="container-fluid bg-light bg-icon py-6" style="padding-top:2rem !important;">
        <div class="container">
            @{
                Html.RenderAction("PostListPartialView", "Post", new { AssetId = Model.AssetId });
            }
        </div>
    </div>
}
else
{
    <!-- Page Header Start -->
    <div class="container-fluid bg-light bg-icon py-6 min-vh-100">
        <div class="container">
            <div class="section-header text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <div class="row col-lg-12 col-md-12">
                    <small class="me-3">
                        <i class="fa fa-user text-primary me-2"></i>@Model.AuthorName &nbsp; <i class="fa fa-calendar text-primary me-2"></i>@Model.CreatedOn.ToString("ddd, dd MMM yyy")
                    </small>
                </div>
                <h4 class="display-6">@Model.AssetName</h4>
            </div>
            @{
                Html.RenderAction("PostListPartialView", "Post", new { AssetId = Model.AssetId });
            }
        </div>
    </div>
    <!-- Page Header End -->
}
