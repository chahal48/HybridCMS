@model IEnumerable<HybridCMSEntities.AdminPageListView>

@if (Model.Count() > 0)
{
    <div class="text-center mx-auto mb-2">
        <small>Pages</small>
    </div>
}
<div class="section-header text-center mx-auto mb-2">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("AdminPageView", "Admin" ,new { URL = item.URL })" class="dropdown-item">
            <small class="bi bi-journal">&nbsp; @Html.DisplayFor(modelItem => item.Name)</small>
        </a>
    }
</div>
