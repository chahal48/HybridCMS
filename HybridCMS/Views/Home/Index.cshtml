@model IEnumerable<HybridCMSEntities.AssetEntity>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
@*
    <!-- Home Start -->
    <div class="container-fluid bg-light bg-icon py-6 min-vh-100">
        <div class="container">
            <div class="section-header text-center mx-auto mb-3" style="max-width: 500px;">
                <h1 class="display-5 mb-3">All Assets</h1>
                <div class="position-relative mx-auto" style="max-width: 400px;">
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        @Html.TextBox("Search", null, new { Class = "form-control bg-transparent w-100 py-3 ps-4 pe-5", placeHolder = "Search" })
                        <button type="submit" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2" id="btnSearch">Search</button>
                    }
                </div>
            </div>

            @if (Model.Count() > 0)
            {
                <div class="row g-4 mb-5">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="bg-white text-center h-100 p-4 p-xl-5">
                                <img class="img-fluid mb-4" style="height:100px;" src="~/img/1.png" alt="">
                                <h4 class="mb-3 text-primary">
                                    @Html.DisplayFor(modelItem => item.AssetName)
                                </h4>
                                <p class="mb-4">
                                    @Html.DisplayFor(modelItem => item.AssetDescription)
                                </p>
                                <h5>Author : <span> @item.AuthorName </span> </h5>
                                <button onclick="fnRedirectAsset('@item.AssetUrl')"
                                        class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill">
                                    Read More
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="row text-center mb-5">
                    <div class="col-lg-12">
                        <i class="bi bi-exclamation-triangle display-1 text-primary"></i>
                        <h1 class="mb-3">Record Not Found</h1>
                        <p class="mb-3">We’re sorry, the record you have looked for does not exist in our website!</p>
                    </div>
                </div>
            }
            @{
                Html.RenderAction("LatestPostView", "Home");
            }
            <div class="row g-4">

            </div>
        </div>
    </div>
