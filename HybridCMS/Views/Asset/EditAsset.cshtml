@model HybridCMS.Models.AssetViewModel
@{
    ViewBag.Title = "Update Asset";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<!-- Update Asset Start -->
<div class="container-xxl py-6">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5" style="max-width: 500px;">
            <h3 class="display-5 mb-3">Update Asset</h3>
        </div>
        <div class="row g-5 justify-content-center">
            <div class="col-lg-7 col-md-12">
                @using (Html.BeginForm("EditAsset", "Asset", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.AssetId)
                    @Html.HiddenFor(model => model.UserId)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-floating mb-3">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                        @Html.LabelFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-floating mb-3">
                        @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control", placeholder = "URL" } })
                        @Html.LabelFor(model => model.URL)
                        @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.initialURL)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Description" } })
                        @Html.LabelFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-check mb-3 float-end">
                        @Html.ActionLink("Cancel", "AdminDashboard", "CMS", new {}, new { @class = "btn btn-outline-secondary border-2 py-2 px-4 rounded-pill fw-bold " }) &nbsp;
                        <button type="submit" class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill fw-bold">Update</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Update Asset End -->
@section scripts{
    <script>
        var text = document.getElementById('URL');
        text.addEventListener('input', function (e) {
            var keyCode = e.keyCode ? e.keyCode : e.which;
            this.value = this.value.replace(/\s/g, '')
            if (keyCode === 32) return;
        })
    </script>
}