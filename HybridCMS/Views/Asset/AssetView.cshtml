@model HybridCMSEntities.AssetEntity
@{
    ViewBag.Title = Model.AssetName ?? "Page Not Found";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
@section styles{
    <style>
        .for-page-header {
            padding-top: 12rem;
            padding-bottom: 6rem;
            background: url(Upload/@Model.AssetPhoto) top right no-repeat !important;
            background-size: cover !important;
        }
    </style>
    <link href="~/Content/threeDot.css" rel="stylesheet" />
    <link href="~/Content/bookmark.css" rel="stylesheet" />
}

@if (Model.AssetTypeId == HybridCMSEntities.AssetType.Blog)
{
    Html.RenderPartial("_AssetBlogPartial", Model);
}
else if (Model.AssetTypeId == HybridCMSEntities.AssetType.Page)
{
    Html.RenderAction("AssetPagePartial", "Asset", Model);
}

@section scripts{
    <script src="~/Scripts/threeDots.js"></script>
    <script src="~/Scripts/fnRedirectWithParameterURL.js"></script>
    <script src="~/Scripts/deletePostsScript.js"></script>
    <script src="~/Scripts/fnBookmarkPost.js"></script>
}